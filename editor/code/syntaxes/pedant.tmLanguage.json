{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Pedant",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#units"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash",
                    "match": "//.*"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric",
                    "match": "\\b[-+]?\\d+(\\.\\d+)?\\b"
                }
            ]
        },
        "units": {
            "patterns": [
                {
                    "name": "constant.language.unit",
                    "match": "\\b(usd|people|nets)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator",
                    "match": "\\+|-|\\*|\\/|="
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\b"
                }
            ]
        }
    },
    "scopeName": "source.pedant"
}